<!DOCTYPE html>
<html lang="nl">
<head>
  <meta charset="UTF-8">
  <title>üéÅ Cadeautjes Klik Spel</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      background: #fff3e0;
    }

    h1 {
      color: #d50000;
    }

    #spel {
      width: 600px;
      height: 400px;
      margin: 20px auto;
      border: 3px solid #d50000;
      position: relative;
      background-image: url('achtergrond.jpg'); /* optioneel */
      background-size: cover;
      overflow: hidden;
    }

    .cadeau {
      width: 50px;
      height: 50px;
      background-image: url('cadeau.png');
      background-size: cover;
      position: absolute;
      cursor: pointer;
    }

    #score {
      font-size: 24px;
      margin-top: 10px;
    }

    button {
      padding: 10px 20px;
      background-color: #d50000;
      color: white;
      border: none;
      font-size: 16px;
      cursor: pointer;
      margin-top: 10px;
    }

    button:hover {
      background-color: #b71c1c;
    }
  </style>
</head>
<body>

  <h1>üéÅ Klik op de cadeautjes!</h1>
  <div id="spel"></div>
  <div id="score">Score: 0</div>
  <button onclick="startSpel()">Start spel</button>

  <script>
    const spel = document.getElementById('spel');
    const scoreDisplay = document.getElementById('score');
    let score = 0;
    let interval;

    function startSpel() {
      score = 0;
      scoreDisplay.textContent = 'Score: 0';
      clearInterval(interval);
      interval = setInterval(voegCadeauToe, 1000);
      // Stop na 30 seconden
      setTimeout(() => clearInterval(interval), 30000);
    }

    function voegCadeauToe() {
      const cadeau = document.createElement('div');
      cadeau.classList.add('cadeau');
      cadeau.style.top = Math.random() * (spel.clientHeight - 50) + 'px';
      cadeau.style.left = Math.random() * (spel.clientWidth - 50) + 'px';

      cadeau.onclick = () => {
        score++;
        scoreDisplay.textContent = 'Score: ' + score;
        spel.removeChild(cadeau);
      };

      spel.appendChild(cadeau);

      // Cadeau verdwijnt automatisch na 2 seconden
      setTimeout(() => {
        if (spel.contains(cadeau)) {
          spel.removeChild(cadeau);
        }
      }, 2000);
    }
  </script>

</body>
</html>